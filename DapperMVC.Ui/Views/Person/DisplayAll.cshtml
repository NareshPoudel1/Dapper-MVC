@model IEnumerable<Person>

<h3>People List</h3>

<div class="my-2">
    <a href="/Person/Add" class="btn btn-primary my-2">Add More</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Email</td>
                    <td>@person.Address</td>
                    <td>
                        <a href="/Person/Edit?id=@person.Id" class="btn btn-success">Edit</a>
                        <a href="/Person/Delete?id=@person.Id" onclick="return window.confirm('This record will be deleted')" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
